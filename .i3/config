## startup procedure

# comms
exec urxvt -e mcabber
exec urxvt -e weechat
for_window [title="WeeChat 1.0.1"] move workspace $tag2
for_window [title="mcabber"] move workspace $tag2

# dev
exec --no-startup-id emacs
for_window [class="Emacs"] move workspace $tag3

# web
exec --no-startup-id dwb
for_window [class="Dwb"] move workspace $tag1

exec --no-startup-id feh --bg-center ~/Pictures/wallpaper.jpg
